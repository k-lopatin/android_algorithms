<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1" android:id="@+id/linear1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"/>


    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/friendsList" android:choiceMode="multipleChoice"
            android:layout_above="@+id/bottomLine"
            android:layout_below="@+id/title"
            android:layout_marginLeft="5dp"/>

    <LinearLayout
            android:layout_height="40dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottomLine">

        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.7"
                android:text="@string/add_new_friend"
                android:id="@+id/button1"
                android:background="@android:color/holo_green_dark"
                android:onClick="onPlusBtnClick"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="@string/delete_friend"
                android:id="@+id/button2"
                android:background="@android:color/holo_red_dark" android:onClick="onDelFriendClick"/>
    </LinearLayout>

</RelativeLayout>

