<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сортировщик"
            android:id="@+id/title" android:layout_gravity="center_horizontal" android:layout_weight="0.03"
            android:textSize="24sp" android:textStyle="bold" android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" android:layout_marginRight="0dp" android:layout_marginLeft="0dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Введите числовую последовательность"
            android:id="@+id/text1" android:layout_weight="0.03" android:textSize="17sp"
            android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unSortedNumbers" android:layout_weight="0.03"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сортировать"
            android:id="@+id/sortBtn" android:layout_weight="0.03" android:onClick="sortClick"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отсортированная последовательность"
            android:id="@+id/text2" android:layout_weight="0.06" android:textSize="17sp"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sortedNumbers" android:layout_weight="0.03"/>
</LinearLayout>

